keywords = {Water diversion,adsorption,inaccessible pore volume,nanoparticles,polymer,residual resistance factor,retention,transport mechanisms},
mendeley-groups = {Own Publication},
pages = {10},
title = {{Transport Properties of Nanoparticles in Sandstones}},
